{
  "name": "api_greenroots",
  "version": "1.0.0",
  "description": "Api REST GreenRoots",
  "main": "index.js",
  "scripts": {
    "======= Pour la prod =======": "========================",
    "start": "node --env-file=.env dist/index.js",
    "build": "tsc",
    "docker:start": "npm run db:migrate:deploy && node dist/index.js",
    "======= Pour le dev ========": "========================",
    "dev:win": "nodemon",
    "dev:linux": "tsx --watch --env-file=.env ./index.ts",
    "test": "node --test --import tsx --experimental-test-module-mocks \"src/**/*.test.ts\"",
    "db:generate": "prisma generate --schema=./src/models/schema.prisma",
    "db:migrate:dev": "prisma migrate dev --schema=./src/models/schema.prisma --name auto",
    "db:migrate:deploy": "prisma migrate deploy --schema=./src/models/schema.prisma",
    "db:reset": "prisma migrate reset --force --schema=./src/models/schema.prisma",
    "db:studio": "prisma studio --schema=./src/models/schema.prisma",
    "db:seed": "tsx --env-file=.env ./src/models/seeding.ts",
    "token": "tsx generateToken.ts"
  },
  "keywords": [],
  "author": "SOTA : Saliha, Ouma√Øma, Tarig, Adrien",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@prisma/client": "^6.16.1",
    "@types/cookie-parser": "^1.4.9",
    "app": "^0.1.0",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "fs": "^0.0.1-security",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "slugify": "^1.6.6",
    "stripe": "^20.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.4.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "nodemon": "^3.1.10",
    "prisma": "^6.16.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0"
  }
}
